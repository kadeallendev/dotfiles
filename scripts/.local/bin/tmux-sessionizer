#!/bin/bash

# Directories for PartsTrader machine
PTML_DIRS=(
    "$HOME"
    "$HOME/Dev"
    "$HOME/Documents"
    $(find ~/Dev -maxdepth 2 -type d -regex '.*/[A-Z]+-[0-9]+.*' -exec dirname {} \; 2>/dev/null | sort | uniq)
)

# Directories for Hedgy
HEDGY_DIRS=(
    "$HOME"
    "$HOME/dev"
)

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # Get array of directories to search
    os=$(uname -s)
    DIRS=("${HEDGY_DIRS[@]}")
    if [[ $os == 'Linux' ]]; then
        DIRS=("${PTML_DIRS[@]}")
    fi

    selected=$(fd . "${DIRS[@]}" -t d --max-depth 1 --full-path |
        sed "s|^$HOME/||" |
        fzf --height=100% --color=bw)

    [[ $selected ]] && selected="$HOME/$selected"
fi

# Exit if nothing selected
[[ ! $selected ]] && exit 0

# Get basename of selected
base=$(basename "$selected" | tr . _)
selected_name="$base"

# Add repo name before worktree branches
if [[ $base =~ ^[A-Z]+-[0-9]+.*$ ]] || [[ $base =~ ^(main|bare)$ ]]; then
    parent="$(basename $(dirname $selected) | tr . _)"
    selected_name="${parent}_${base}"
fi

tmux_running=$(pgrep tmux)

# If TMUX is not running
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    tmux new-session -ds $selected_name -c $selected
    tmux select-window -t "$selected_name:1"
fi

tmux switch-client -t $selected_name
