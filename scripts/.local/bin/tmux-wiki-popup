#!/usr/bin/env bash

# WIKI_DIR=${WIKI_DIR:~/wiki}
WIKI_DIR=~/wiki

declare selected
# TODO: Take multiple args
if [[ $# -eq 1 ]]; then
	selected="$1"
else
	selected=$(fd . $WIKI_DIR -t f --full-path |
		sed "s|^$HOME/wiki/||" |
		fzf --height 100% --color bw)
fi

[[ $selected ]] && selected="$HOME/wiki/$selected"

[[ ! $selected ]] && exit 0

nvim $selected --cmd "cd $WIKI_DIR"
